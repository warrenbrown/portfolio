<div class="actions">
<% if user_signed_in? && current_user.email == 'warren@katapultmedia.com' %>
    <%= link_to 'Edit', edit_article_path(@article), class: 'button' %>
    <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %>
<% end %>
</div>
<div id="post-show-content" class="skinny-wrapper wrapper-padding">
  <header>
    <p class="date">
      <%= @article.created_at.strftime("%A, %B, %d") %>
    </p>
    <h1><%= @article.title %></h1>

    <hr>

  </header>
  <div id="content">
    <%= markdown @article.content %>
  </div>
  <hr>
  <div id="share-box">
    <p>Share <%= @article.title %></p>
    <a onclick="javascript:window.open('http://twitter.com/intent/tweet?text=<%= @article.title %> by @shaolincoder - <%= url_for([@article, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-google-plus"></i></a>
  </div>
  <hr>

</div>
