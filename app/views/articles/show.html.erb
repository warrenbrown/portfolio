<p id="notice"><%= notice %></p>
<div id="post-show-content" class="skinny-wrapper wrapper-padding">
  <header>
    <p class="date">
      <%= @article.created_at.strftime("%m/%d/%Y") %>
    </p>
    <h1><%= @article.title %></h1>
    <hr>
  </header>
  <div id="content">
    <p><%= @article.content %></p>
  </div>
  <hr>
  <div id="share-box">
    <p>Share <%= @article.title %></p>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-google-plus"></i></a>
  </div>
  <hr>
</div>
