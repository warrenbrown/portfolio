<h1 id="page-title">Contact Page</h1>
<div class="skinny-wrapper wrapper-padding">
  <%= simple_form_for(@contact) do |f| %>
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact message from being sent:</h2>

        <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.input :name %>
    </div>

    <div class="field">
      <%= f.input :email %>
    </div>

    <div class="field">
      <%= f.input :message %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
